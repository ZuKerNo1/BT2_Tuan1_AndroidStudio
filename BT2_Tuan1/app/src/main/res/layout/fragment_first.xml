<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment"
    android:orientation="vertical"
>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/quote"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"/>
    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="  Trần Kim Vũ"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColorHint="#feb900"
        android:layout_gravity="center"/>
    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="  2050531200360"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColorHint="#feb900"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/button_first"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="LOGIN ME"
        android:padding="10dp"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="#feb900"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/key_24"
        android:text="  Lost Password ?"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#feb900"
        android:layout_gravity="center"
        android:layout_marginTop="170dp"/>
</androidx.appcompat.widget.LinearLayoutCompat>